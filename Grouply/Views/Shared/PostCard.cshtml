@model Grouply.Models.Post
@using Microsoft.AspNetCore.Identity
@inject UserManager<Grouply.Models.ApplicationUser> UserManager

<div class="bg-white rounded-2xl shadow-md p-4 mb-6">

    <!-- Box 1: Group -->
    <div class="bg-gray-100 rounded-lg p-3 mb-3 flex items-center justify-between">
        <div class="flex items-center gap-2">
            <img src="@(Model.Group.ImageUrl ?? "/images/default-group.png")" class="rounded-circle" width="32"
                height="32" alt="group" />
            <a href="/Groups/Details/@Model.Group.Id" class="font-semibold text-blue-600 hover:underline">
                @Model.Group.Name
            </a>
        </div>
        <div class="text-gray-400">‚Ä¢‚Ä¢‚Ä¢</div>
    </div>

    <!-- Box 2: Creator -->
    <div class="bg-gray-50 rounded-lg p-3 mb-3 flex items-center gap-2">
        @{
            var creatorImageUrl = Model.User.ImageUrl ??
            "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png";
        }
        <a href="/Users/Profile/@Model.User.Id">
            <img src="@creatorImageUrl" class="rounded-circle" width="32" height="32" alt="creator" />
        </a>
        <a href="/Users/Profile/@Model.User.Id" class="font-medium text-gray-800 hover:underline">
            @Model.User.UserName
        </a>
    </div>

    <!-- Box 3: Post Content -->
    <div class="bg-gray-50 rounded-lg p-3 mb-3">
        @if (Model.PostType == Grouply.Models.Enums.PostType.Video && !string.IsNullOrEmpty(Model.MediaUrl))
        {
            <video class="w-full rounded-lg mb-2" controls>
                <source src="@Model.MediaUrl" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
        }
        else if (!string.IsNullOrEmpty(Model.MediaUrl))
        {
            <img src="@Model.MediaUrl" class="w-full rounded-lg mb-2" alt="post media" />
        }

        @if (!string.IsNullOrEmpty(Model.ContentText))
        {
            <p class="mb-2 text-gray-700">@Model.ContentText</p>
        }

        <div class="text-xs text-gray-400">
            @Model.CreatedAt.ToLocalTime().ToString("g")
        </div>
    </div>

    <!-- Box 4: Interactions -->
    <div class="bg-gray-100 rounded-lg p-3 flex items-center gap-6">
        <form method="post" action="/Posts/Like/@Model.Id">
            <button type="submit" class="flex items-center gap-1 text-red-500">
                ‚ù§Ô∏è @Model.Likes.Count
            </button>
        </form>

        <a href="/Posts/Details/@Model.Id" class="flex items-center gap-1 text-blue-600">
            üí¨ @Model.Comments.Count
        </a>
    </div>

</div>