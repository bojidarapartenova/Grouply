@using Grouply.Models
@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Grouply</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">Grouply</a>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <form class="d-flex ms-3 me-auto" asp-controller="Groups" asp-action="Search" method="get">
                            <input class="form-control me-2" type="search" placeholder="Search..." name="query" />
                            <button class="btn btn-outline-primary" type="submit">Search</button>
                        </form>
                    </ul>

                    <ul class="navbar-nav mb-2 mb-lg-0 align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item me-3">
                                <a class="nav-link" asp-area="" asp-controller="Groups" asp-action="Index">Explore</a>
                            </li>

                            <li class="nav-item me-3">
                                <a class="nav-link" asp-controller="Chats" asp-action="Index">Chats</a>
                            </li>

                            <li class="nav-item dropdown">
                                @{
                                    string imageUrl =
                                    "https://cdn.pixabay.com/photo/2015/10/05/22/37/blank-profile-picture-973460_1280.png";
                                    var user = await UserManager.GetUserAsync(User);
                                    if (user != null && !string.IsNullOrEmpty(user.ImageUrl))
                                    {
                                        imageUrl = user.ImageUrl;
                                    }
                                }
                                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button"
                                    data-bs-toggle="dropdown">
                                    <img src="@imageUrl" class="rounded-circle me-2" width="32" height="32" alt="Avatar" />
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                                            View Profile
                                        </a>
                                    </li>
                                    <li>
                                        <hr class="dropdown-divider" />
                                    </li>
                                    <li>
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout"
                                            asp-route-returnUrl="~/">
                                            <button type="submit" class="dropdown-item">Logout</button>
                                        </form>

                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>